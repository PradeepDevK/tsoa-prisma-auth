{
    "entryFile": "src/server.ts",
    "controllerPathGlobs": ["src/controllers/*.ts"],
    "routes": {
      "routesDir": "src/routes",
      "authenticationModule": "./src/middlewares/auth"
    },
    "spec": {
      "outputDirectory": "src/swagger",
      "specVersion": 3,
      "securityDefinitions": {
        "jwt": {
          "type": "apiKey",
          "name": "Authorization",
          "in": "header"
        }
      }
    }
}  